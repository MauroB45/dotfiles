# ---------------------------------
# Common aliases
# ---------------------------------

alias home='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias '?=man'
alias ls='ls -A'
alias ps-grep='ps aux | grep'
alias hosts='code /etc/hosts'
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'


# ---------------------------------
# Git specific aliases
# ---------------------------------

alias g='git'
alias gck='git checkout'
alias wip="git add .;git commit -m 'wip'"
alias nah='git reset --hard;git clean -df'
alias lol = log --graph --decorate --pretty=oneline --abbrev-commit
alias lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
alias lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
alias lgn = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
alias logs = log --show-signature


# ---------------------------------
# PHP :D
# ---------------------------------

alias art='php artisan'

# Composer
alias dump='composer dump-autoload -o'


# ---------------------------------
# NPM :D
# ---------------------------------

# This makes life MUCH easier :')
alias nr='npm run'
alias ni='npm install'
alias nid='npm install -D'
alias nip='npm install --only=prod'


